<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.lyc.study.go005.XfermodeView
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <com.lyc.study.go005.XfermodeView1
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <com.lyc.study.go005.XfermodeView2
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <com.lyc.study.go005.XfermodeView3
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.lyc.study.go005.CircleImageViewA
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <com.lyc.study.go005.CircleImageViewB
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/fl_container"
        >
        <TextView
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:textSize="14dp"
            android:singleLine="true"
            android:id="@+id/tv_target"
            android:textColor="@color/black"
            android:text="12312312312312312312312312312312312"
            android:ellipsize="none"
            />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CalFile_0"
            tools:tag=""
            android:id="@+id/btn_cal_0"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:id="@+id/tv_result_0"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CalFile_1"
            tools:tag=""
            android:id="@+id/btn_cal_1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:id="@+id/tv_result_1"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="比较"
        android:id="@+id/btn_check"
        tools:tag=""
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <com.lyc.study.go020.MarqueeTextView
            android:id="@+id/marqueeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />
    </RelativeLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/btn_add_1"
        android:text="add_1"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <com.lyc.study.go020.MarqueeView
            android:id="@+id/marqueeView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <com.lyc.study.go020.MarqueeView
            android:id="@+id/marqueeView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@color/black"
            />
    </RelativeLayout>





</LinearLayout>