    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lyc.study.go005.RoundImageView
        android:id="@+id/roundImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/demo_lulu01"
        app:borderRadius="30dp"
        app:type="round" />

    <com.lyc.study.go005.RoundImageViewByXfermode
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/demo_lulu02"
        app:borderRadius="30dp"
        app:type="round"
        />
    <com.lyc.study.go005.XfermodeView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_circle1"
        />
    <com.lyc.study.go005.CircleImageView03
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_circle2"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_circle3"
        />




