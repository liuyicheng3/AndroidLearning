<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.lyc.study.go014.ticker.TickerView
      android:background="@color/black"
      android:id="@+id/tickerView"
      android:layout_width="100dp"
      android:layout_height="40dp"
      app:ticker_animationDuration="1500"

      />
  <Button
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="Num"
      android:id="@+id/btn_num"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="gift"
      android:id="@+id/btn_gift"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/btn_hook"
      android:orientation="vertical">

    <com.lyc.study.go014.GiftFrameLayout
        android:id="@+id/gift_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.lyc.study.go014.GiftFrameLayout
        android:id="@+id/gift_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </LinearLayout>

  <Button
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="btn_sleep_go"
      android:id="@+id/btn_sleep_go"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="btn_mult"
      android:id="@+id/btn_mult"
      />
  <Button
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="btn_keyframe"
      android:id="@+id/btn_keyframe"
      />
  <Button
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:text="btn_tween"
      android:id="@+id/btn_tween"
      />
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="100dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_target_01"
        android:background="@color/black"
        />
  </FrameLayout>
</LinearLayout>