<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lyc.study.go009.CustomViewGroup
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/black"
        android:id="@+id/vg_top"
        >

        <com.lyc.study.go009.SonViewGroup
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorAccent"
            android:id="@+id/vg_son"

            >

            <com.lyc.study.go009.GrandSonView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/vg_inner"
                ></com.lyc.study.go009.GrandSonView>
        </com.lyc.study.go009.SonViewGroup>
    </com.lyc.study.go009.CustomViewGroup>

    <com.lyc.study.go009.CustomLinnearLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="131231"
            />

        <TextView
            android:tag="vip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="asfas"
            />
    </com.lyc.study.go009.CustomLinnearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        android:gravity="right"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="13123123123123"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="asfasdfsadfsdfasfswqweqweqweaafaf"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        android:gravity="left"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="131231231231231afssadf2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="asfasdfsadfsdfasfswqweqweqwea"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="13"
            android:layout_toLeftOf="@+id/tv_center"
            android:tag= "vip"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="asfadfasfdasdfas12345"
            android:id="@+id/tv_center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</LinearLayout>